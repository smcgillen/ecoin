  <div class="container">

      <form method='post' action='/merchants' class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        <input type="text" name="merchant[name]" class="form-control" placeholder="Name" autofocus>
        <input type="text" name="merchant[email]" class="form-control" placeholder="Email address" autofocus>
        <input type="password" name="merchant[password]" class="form-control" placeholder="Password">
        <input type="password" name="merchant[password_confirmation]"class="form-control" placeholder="Password confirmation">
        <label class="checkbox">
          <input type="checkbox" value="remember-me"> Remember me
        </label>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>

    </div>